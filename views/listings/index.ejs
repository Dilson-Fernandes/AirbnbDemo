<% layout('./layouts/boilerplate') -%>
<style>
#filters{
    display: flex;
    flex-wrap: wrap;
    align-items: center;
}
#filters div a{
    text-decoration: none;
    color: black;
}
.filter {
    margin-top: 1rem;
    margin-right: 2rem;
    text-align: center;
    opacity: 0.7;
    
}
.filter:hover{
    opacity:1;
    cursor: pointer;
}
.filter p{
    font-size: small;
}
.tax-switch{
    display: none;
}
.tax-toggle{
    border: 1.5px solid black;
    border-radius: 1rem;
    height:3.25rem;
    padding:3px;
    display: flex;
    align-items: center;
    margin-left: 5rem;
    padding-left:  5px; ;
}
</style>
<body>
    <div id="filters">
        <div class="filter">
            <a href="/listings/search?category=Trending"> 
                <div><i class="fa-solid fa-fire"></i></div>
                <p>Trending</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listings/search?category=Farms"> 
            <div><i class="fa-solid fa-tractor"></i></div>
            <p>Farms</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listings/search?category=Mountain City"> 
            <div><i class="fa-solid fa-mountain-city"></i></div>
            <p>Moutain City</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listings/search?category=Castle"> 
            <div><i class="fa-brands fa-fort-awesome"></i></div>
            <p>Castle</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listings/search?category=Artic Pool"> 
            <div><i class="fa-solid fa-person-swimming"></i></i></div>
            <p>Aritic Pool</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listings/search?category=Mountain Valley"> 
            <div><i class="fa-solid fa-mountain"></i></div>
            <p>Mountain Valley</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listings/search?category=Rooms"> 
            <div><i class="fa-solid fa-bed"></i></i></div>
            <p>Rooms</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listings/search?category=Sea Shore"> 
            <div><i class="fa-solid fa-water"></i></i></div>
            <p>Sea Shore</p>
            </a>
        </div>
        <div class="tax-toggle">
            <div class="form-check form-switch form-check-reverse">
            <input class="form-check-input" type="checkbox" id="flexSwitchCheckReverse">
            <label class="form-check-label" for="flexSwitchCheckReverse">Total after Taxes</label>
            </div>
        </div>
    </div>
    <!-- <form action="/listings/new" method="get">
        <input type="submit" value="create new Listing">
    </form> -->
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-2">
    <% for(let listings of allListings){%>
    <a href="/listings/<%= listings._id %>" class="listing-link">
        <div class="card listing-card col"   >
            <img src="<%= listings.image.url %>" class="card-img-top" alt="listing_images" style="height: 20rem;">
            <div class="card-img-overlay"></div>
            <div class="card-body">
                <b><%= listings.title %></b> 
            <p class="card-text"> &#8377;<%= listings.price %>/night
            <i class="tax-switch"> &nbsp; &nbsp; +18% GST</i></p>
            </div>
        </div>
    </a>
    <%} %>
    </div>
    <!-- <ul>
        <% for(let listings of allListings){%>
        <li><a href="/listings/<%= listings._id %>"><%= listings.title %></a> </li>
        <li><a href="/listings/<%= listings._id %>"><%= listings.title %></a> </li>
        <%} %>
    </ul> -->

    <script>
        let toggleSwitch = document.getElementById("flexSwitchCheckReverse");
        toggleSwitch.addEventListener("click", ()=>{
            let taxInfo = document.getElementsByClassName("tax-switch");
            for(info of taxInfo)
            {
                if(info.style.display != "inline")
                {
                    info.style.display = "inline";
                }
                else{
                    info.style.display = "none";
                }
            }
        })
   </script>
</body>


